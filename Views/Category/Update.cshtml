
@model StockAppMVC.Models.UpdateCategoryViewModel

@{ ViewBag.Title = "Update Category"; }

<div class="row justify-content-center">

        <div class="card">
            <div class="card-header">
                <h1>Update Category</h1>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Update Category Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update Category" class="btn btn-success" />
                </div>
            </form>

        </div>
    </div>




